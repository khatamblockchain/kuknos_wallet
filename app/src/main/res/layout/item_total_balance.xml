<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pasargard"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/assetNameTextView"
        style="@style/RegularWhiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/balanceTextView"
        style="@style/ShortDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/assetNameTextView"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/_10000_00"
        android:textSize="@dimen/title_text_size" />

    <ImageView
        android:id="@+id/assetsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_dropdown" />

</RelativeLayout>
